<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/templateImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/ai_surface"
            android:src="@drawable/template_default_sample" />

        <!-- Premium Badge -->
        <ImageView
            android:id="@+id/premiumBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_premium"
            android:visibility="gone" />

        <!-- Popular Badge -->
        <TextView
            android:id="@+id/popularBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:background="@drawable/popular_badge_background"
            android:text="ðŸ”¥ HOT"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone" />
<!--

        &lt;!&ndash; Template Name &ndash;&gt;
        <TextView
            android:id="@+id/templateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/templateImage"
            android:padding="12dp"
            android:text="Template Name"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />
-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_alignBottom="@+id/templateImage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="#80000000"
        android:padding="8dp">


        <TextView

            android:id="@+id/templateName"
            style="@style/TextAppearance.SuperPhoto.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="Template Name"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>