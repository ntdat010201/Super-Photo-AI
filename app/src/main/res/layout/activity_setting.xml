<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.activities.SettingActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/background_dark"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <!-- Language Setting -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/languageItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/setting_item_background"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/languageIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_language"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/purple_accent" />

                <TextView
                    android:id="@+id/languageText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/languageIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/languageValue" />

                <TextView
                    android:id="@+id/languageValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@id/languageArrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/languageArrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/text_secondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Rate Our App Setting -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rateAppItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/setting_item_background"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/rateAppIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/purple_accent" />

                <TextView
                    android:id="@+id/rateAppText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rate Our App"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/rateAppIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/rateAppArrow" />

                <ImageView
                    android:id="@+id/rateAppArrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/text_secondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Share App Setting -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/shareAppItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/setting_item_background"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/shareAppIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_share"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/purple_accent" />

                <TextView
                    android:id="@+id/shareAppText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Share App"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/shareAppIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/shareAppArrow" />

                <ImageView
                    android:id="@+id/shareAppArrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/text_secondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Contact Us Setting -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contactUsItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/setting_item_background"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/contactUsIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_contact"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/purple_accent" />

                <TextView
                    android:id="@+id/contactUsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/contactUsIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/contactUsArrow" />

                <ImageView
                    android:id="@+id/contactUsArrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/text_secondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Privacy Policy Setting -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/privacyPolicyItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/setting_item_background"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/privacyPolicyIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_privacy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/purple_accent" />

                <TextView
                    android:id="@+id/privacyPolicyText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/privacyPolicyIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/privacyPolicyArrow" />

                <ImageView
                    android:id="@+id/privacyPolicyArrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/text_secondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Terms of Service Setting -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/termsOfServiceItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/setting_item_background"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/termsOfServiceIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_terms"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/purple_accent" />

                <TextView
                    android:id="@+id/termsOfServiceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Terms of Service"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/termsOfServiceIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/termsOfServiceArrow" />

                <ImageView
                    android:id="@+id/termsOfServiceArrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/text_secondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>