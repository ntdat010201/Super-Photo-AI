<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <!-- Upload Area -->
        <LinearLayout
            android:id="@+id/uploadArea"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ai_upload_background"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <!-- Selected Image Display -->
            <ImageView
                android:id="@+id/selectedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/ai_image_background"
                android:visibility="gone" />

            <!-- Upload Placeholder -->
            <LinearLayout
                android:id="@+id/uploadPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_upload"
                    app:tint="@color/ai_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Upload only JPG and PNG images."
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File Size &lt;10Mb, Dimension > 300px"
                    android:textColor="@color/ai_text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Prompt Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Prompt"
                android:textColor="@color/ai_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/promptEditText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/ai_edittext_background"
                android:gravity="top|start"
                android:hint="Describe the scene and the action. For example: Turn this photo of a quiet city street at night into a short video. Add moving neon lights, passing cars with headlights, and a light rain effect to create a cinematic atmosphere."
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="@color/ai_text_primary"
                android:textColorHint="@color/ai_text_secondary"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/refreshPromptButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:background="@drawable/ai_icon_ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_refresh"
                app:tint="@color/ai_accent" />

        </LinearLayout>

        <!-- Hints Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Hints:"
                android:textColor="@color/ai_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hintDancingStreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ai_hint_chip_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="Dancing Street"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hintVolcanoSea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ai_hint_chip_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="Volcano by the Sea"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hintSurfingSea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ai_hint_chip_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="Surfing on the sea"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/refreshHintsButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:background="@drawable/ai_icon_ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_refresh"
                app:tint="@color/ai_accent" />

        </LinearLayout>

        <!-- InstantID Controls Section -->
        <LinearLayout
            android:id="@+id/instantIdSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Face Identity Preservation"
                android:textColor="@color/ai_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- InstantID Weight Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Face Similarity"
                        android:textColor="@color/ai_text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/instantIdWeightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.8"
                        android:textColor="@color/ai_accent"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/instantIdWeightSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="80"
                    android:progressTint="@color/ai_accent"
                    android:thumbTint="@color/ai_accent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Low"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- IP-Adapter Weight Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Style Influence"
                        android:textColor="@color/ai_text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ipAdapterWeightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5"
                        android:textColor="@color/ai_accent"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/ipAdapterWeightSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="@color/ai_accent"
                    android:thumbTint="@color/ai_accent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtle"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strong"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Aspect Ratio Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Aspect Ratio"
                android:textColor="@color/ai_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/aspectRatio1to1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/ai_aspect_ratio_selected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="1:1"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/aspectRatio16to9"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/ai_aspect_ratio_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="16:9"
                    android:textColor="@color/ai_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/aspectRatio9to16"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/ai_aspect_ratio_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="9:16"
                    android:textColor="@color/ai_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/aspectRatio3to4"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/ai_aspect_ratio_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="3:4"
                    android:textColor="@color/ai_text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Choose Style Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose Style"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textColor="@color/ai_accent"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ai_text_ripple"
                    android:padding="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- None Style -->
                <LinearLayout
                    android:id="@+id/styleNone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/ai_style_selected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/ai_style_icon_background"
                        android:padding="12dp"
                        android:src="@drawable/ic_style_none"
                        app:tint="@color/ai_text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="@color/ai_text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Photo Style -->
                <LinearLayout
                    android:id="@+id/stylePhoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/ai_style_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/ai_style_photo_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/style_photo_sample" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Anime Style -->
                <LinearLayout
                    android:id="@+id/styleAnime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/ai_style_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/ai_style_anime_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/style_anime_sample" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anime"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Illustration Style -->
                <LinearLayout
                    android:id="@+id/styleIllustration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ai_style_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/ai_style_illustration_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/style_illustration_sample" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Illustration"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Warning Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_info"
                app:tint="@color/ai_text_tertiary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI content should never be applied to illegal or harmful activities."
                android:textColor="@color/ai_text_tertiary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Generate Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:background="@drawable/ai_generate_button"
            android:layout_marginHorizontal="20dp">

            <Button
                android:id="@+id/generateButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:text="âœ¨ Generate"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- AI Result Section -->
        <LinearLayout
            android:id="@+id/resultSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="AI Generated Result"
                android:textColor="@color/ai_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Result Image Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ai_upload_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/resultImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ai_image_background" />

                <!-- Loading indicator -->
                <ProgressBar
                    android:id="@+id/loadingProgress"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="@color/ai_accent"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- File Path Info -->
            <TextView
                android:id="@+id/filePathText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ai_upload_background"
                android:padding="12dp"
                android:text="ðŸ“ Saved to: /storage/emulated/0/Pictures/SuperPhoto/generated_images/"
                android:textColor="@color/ai_text_secondary"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:visibility="gone"
                android:maxLines="2"
                android:ellipsize="middle" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/downloadButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ai_secondary_button"
                    android:text="ðŸ“¥ Download"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />

                <Button
                    android:id="@+id/shareButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/ai_secondary_button"
                    android:text="ðŸ“¤ Share"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>