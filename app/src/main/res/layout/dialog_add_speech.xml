<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Speech"
        android:textColor="@color/ai_text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Character Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Character"
        android:textColor="@color/ai_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/characterRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Speech Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech Text"
        android:textColor="@color/ai_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/speechEditText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/speech_input_background"
        android:padding="12dp"
        android:hint="Enter speech text here..."
        android:textColorHint="@color/ai_text_hint"
        android:textColor="@color/ai_text_primary"
        android:textSize="14sp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:layout_marginBottom="24dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textColor="@color/ai_text_secondary"
            android:textSize="14sp"
            android:background="@drawable/dialog_cancel_button"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="12dp"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="@drawable/dialog_add_button"
            android:paddingHorizontal="16dp"
            android:minWidth="0dp" />

    </LinearLayout>

</LinearLayout>