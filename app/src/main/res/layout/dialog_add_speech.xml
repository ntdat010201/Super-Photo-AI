<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Speech"
        android:textColor="@color/ai_text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Character Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Character"
        android:textColor="@color/ai_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/characterRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Speech Input Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Speech"
        android:textColor="@color/ai_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Audio File Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/speech_input_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_audio_file"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            app:tint="@color/ai_text_secondary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectedAudioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No audio file selected"
                android:textColor="@color/ai_text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/audioDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/ai_text_hint"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/selectAudioButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Browse"
            android:textColor="@color/ai_text_primary"
            android:textSize="12sp"
            android:background="@drawable/dialog_cancel_button"
            android:paddingHorizontal="12dp"
            android:minWidth="0dp" />

    </LinearLayout>

    <!-- Text Input Alternative -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or enter text to convert to speech"
        android:textColor="@color/ai_text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textColor="@color/ai_text_secondary"
            android:textSize="14sp"
            android:background="@drawable/dialog_cancel_button"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="12dp"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="@drawable/dialog_add_button"
            android:paddingHorizontal="16dp"
            android:minWidth="0dp" />

    </LinearLayout>

    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

</LinearLayout>