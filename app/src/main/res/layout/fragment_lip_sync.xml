<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="140dp">

        <!-- Video Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Video"
            android:textColor="@color/ai_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/videoUploadArea"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ai_upload_background"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/videoUploadIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_video_upload"
                android:layout_marginBottom="8dp"
                app:tint="@color/ai_text_secondary" />

            <TextView
                android:id="@+id/videoUploadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to upload video"
                android:textColor="@color/ai_text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/videoSizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max 100MB"
                android:textColor="@color/ai_text_hint"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Selected Video Container -->
        <LinearLayout
            android:id="@+id/selectedVideoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/ai_selected_item_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_video"
                android:layout_marginEnd="12dp"
                app:tint="@color/ai_text_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/selectedVideoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="video.mp4"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selectedVideoSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 MB"
                    android:textColor="@color/ai_text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/removeVideoButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/ai_text_secondary" />

        </LinearLayout>

        <!-- Audio Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Audio"
            android:textColor="@color/ai_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/audioUploadArea"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ai_upload_background"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/audioUploadIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_audio_upload"
                android:layout_marginBottom="8dp"
                app:tint="@color/ai_text_secondary" />

            <TextView
                android:id="@+id/audioUploadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to upload audio"
                android:textColor="@color/ai_text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/audioSizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max 50MB"
                android:textColor="@color/ai_text_hint"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Selected Audio Container -->
        <LinearLayout
            android:id="@+id/selectedAudioContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/ai_selected_item_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_audio"
                android:layout_marginEnd="12dp"
                app:tint="@color/ai_text_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/selectedAudioName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="audio.mp3"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selectedAudioSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2 MB"
                    android:textColor="@color/ai_text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/removeAudioButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/ai_text_secondary" />

        </LinearLayout>

        <!-- Lip Sync Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lip Sync Options"
            android:textColor="@color/ai_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/enhanceQualityCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@color/ai_accent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enhance video quality"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/preserveExpressionCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:buttonTint="@color/ai_accent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Preserve facial expressions"
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Generate Button -->
        <Button
            android:id="@+id/generateButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="🎬 Generate Lip Sync"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/ai_generate_button"
            android:layout_marginBottom="16dp"
            android:enabled="false" />

        <!-- Warning Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info"
                android:layout_marginEnd="8dp"
                app:tint="@color/ai_text_hint" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Both video and audio files are required for lip sync generation."
                android:textColor="@color/ai_text_hint"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>