<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="90dp">

        <!-- Prompt Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prompt"
            android:textColor="@color/ai_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Optional)"
            android:textColor="@color/ai_text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/promptEditText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/ai_edittext_background"
            android:gravity="top|start"
            android:hint="Describe the scene and the action. For example: Turn this photo of a quiet city street at night into a short video. Add moving neon lights, passing cars with headlights, and a light rain effect to create a cinematic atmosphere."
            android:textColorHint="@color/ai_text_hint"
            android:textColor="@color/ai_text_primary"
            android:textSize="14sp"
            android:padding="16dp"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:layout_marginBottom="20dp" />

        <!-- Hints Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hints:"
                android:textColor="@color/ai_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/refreshButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_refresh"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/ai_text_secondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/hint1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dancing on the Street"
                android:textColor="@color/ai_text_secondary"
                android:textSize="12sp"
                android:background="@drawable/ai_hint_button"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/hint2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Volcano by the Sea"
                android:textColor="@color/ai_text_secondary"
                android:textSize="12sp"
                android:background="@drawable/ai_hint_button"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/hint3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Surfing on the sea"
                android:textColor="@color/ai_text_secondary"
                android:textSize="12sp"
                android:background="@drawable/ai_hint_button"
                android:padding="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Duration Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textColor="@color/ai_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/duration10s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10 Seconds"
                android:textColor="@color/ai_text_primary"
                android:textSize="14sp"
                android:background="@drawable/ai_duration_button"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/duration15s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 Seconds"
                android:textColor="@color/ai_text_secondary"
                android:textSize="14sp"
                android:background="@drawable/ai_duration_button_unselected"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/duration20s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20 Seconds"
                android:textColor="@color/ai_text_secondary"
                android:textSize="14sp"
                android:background="@drawable/ai_duration_button_unselected"
                android:padding="12dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Negative Prompt Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negative Prompt"
            android:textColor="@color/ai_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Optional)"
            android:textColor="@color/ai_text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/negativePromptEditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ai_edittext_background"
            android:gravity="top|start"
            android:hint="List the types of content you don't want to see in the video. For example: animation, blur, distortion, logos, abstract, illustrations..."
            android:textColorHint="@color/ai_text_hint"
            android:textColor="@color/ai_text_primary"
            android:textSize="14sp"
            android:padding="16dp"
            android:inputType="textMultiLine"
            android:maxLines="4"
             />
        <!-- Warning Text -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info"
                android:layout_marginEnd="8dp"
                app:tint="@color/ai_text_hint" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI content should never be applied to illegal or harmful activities."
                android:textColor="@color/ai_text_hint"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Generate Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            android:background="@drawable/ai_generate_button"
            android:layout_marginHorizontal="20dp">

            <Button
                android:id="@+id/generateButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                android:text="✨ Generate"
                android:textColor="@color/ai_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>