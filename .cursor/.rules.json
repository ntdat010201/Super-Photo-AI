{
  "rules": [
    {
      "path": "rules/base-rules.mdc",
      "description": "Global rules for all AI interactions in this project",
      "globs": ["*.*"]
    },
    {
      "path": "rules/project-identification-rules.mdc",
      "description": "Quy tắc nhận dạng và cảnh báo khi có nhầm lẫn giữa các dự án",
      "globs": ["*.*"],
      "alwaysApply": true
    },
    {
      "path": "rules/project-personality-generator.mdc",
      "description": "Quy tắc tạo ngẫu nhiên tính cách cho dự án để tăng tính thú vị khi làm việc",
      "globs": ["*.md", "project-creation-workflow.mdc"]
    },
    {
      "path": "rules/javascript-rules.mdc",
      "description": "Rules for JavaScript and TypeScript projects including React, Vue, Angular, Node.js",
      "globs": ["*.js", "*.jsx", "*.ts", "*.tsx", "*.vue"]
    },
    {
      "path": "rules/python-rules.mdc",
      "description": "Rules for Python projects including Django, Flask, FastAPI, data science, and ML",
      "globs": ["*.py"]
    },
    {
      "path": "rules/mobile-rules.mdc",
      "description": "Rules for mobile app development with React Native, Flutter, Swift, and Kotlin",
      "globs": ["*.dart", "*.swift", "*.kt", "*.java", "*.tsx", "*.jsx"]
    },
    {
      "path": "rules/backend-rules.mdc",
      "description": "Rules for backend development across different languages and frameworks",
      "globs": [
        "*.js",
        "*.ts",
        "*.py",
        "*.go",
        "*.java",
        "*.php",
        "*.rb",
        "*.cs"
      ]
    },
    {
      "path": "rules/nodejs-backend-rules.mdc",
      "description": "Specific rules for Node.js backend development with Express, NestJS, and other frameworks",
      "globs": ["*.js", "*.ts"]
    },
    {
      "path": "rules/flutter-rules.mdc",
      "description": "Comprehensive rules for Flutter app development",
      "globs": ["*.dart"]
    },
    {
      "path": "rules/android-rules.mdc",
      "description": "Comprehensive rules for Android app development with Kotlin and Java",
      "globs": ["*.kt", "*.java", "*.xml"]
    },
    {
      "path": "rules/ios-rules.mdc",
      "description": "Comprehensive rules for iOS app development with Swift and SwiftUI",
      "globs": [
        "*.swift",
        "*.storyboard",
        "*.xib",
        "*.xcodeproj",
        "*.xcworkspace",
        "*.pbxproj",
        "*.plist"
      ]
    },
    {
      "path": "rules/i18n.mdc",
      "description": "Rules for internationalization and localization across all projects",
      "globs": [
        "*.json",
        "*.yaml",
        "*.yml",
        "*.properties",
        "*.strings",
        "*.resx",
        "*.arb"
      ]
    },
    {
      "path": "rules/markdown-unified-rules.mdc",
      "description": "Quy định thống nhất về Markdown và tài liệu",
      "globs": [
        "*.md",
        "*.markdown",
        "*.mdx",
        "Instruction.md",
        "README*.md",
        "Decisions.md",
        "Changelog.md",
        "Help.md",
        "Project.md",
        "Codebase.md"
      ],
      "alwaysApply": true
    },
    {
      "path": "rules/terminal-ssh-rules.mdc",
      "description": "Quy tắc sử dụng sshpass cho các lệnh SSH trong terminal",
      "globs": ["*.sh", "*.bash", "*.zsh"],
      "alwaysApply": true
    },
    {
      "path": "rules/terminal-commands-rules.mdc",
      "description": "Quy tắc sử dụng terminal và lệnh SSH với sshpass",
      "globs": [],
      "alwaysApply": true
    },
    {
      "path": "rules/react-2025-rules.mdc",
      "description": "Cấu trúc thư mục và quy tắc hiện đại cho dự án React 2025",
      "globs": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "alwaysApply": false
    },
    {
      "path": "rules/shadcn-ui-rules.mdc",
      "description": "Chi tiết quy tắc sử dụng shadcn/ui và cách xử lý xung đột với Chakra UI",
      "globs": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "alwaysApply": false
    }
  ]
}
